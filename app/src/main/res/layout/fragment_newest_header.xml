<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="200dp">


    <cn.studyou.library.view.BannerLayout
        android:id="@+id/viepager_fragment_newest"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:autoPlayDuration="3000"
        app:indicatorMargin="10dp"
        app:indicatorPosition="centerBottom"
        app:indicatorShape="rect"
        app:indicatorSpace="3dp"
        app:scrollDuration="1000"
        app:selectedIndicatorColor="#a39696"
        app:selectedIndicatorHeight="2dp"
        app:selectedIndicatorWidth="10dp"
        app:unSelectedIndicatorColor="#d3f2cf"
        app:unSelectedIndicatorHeight="2dp"
        app:unSelectedIndicatorWidth="10dp"/>
</LinearLayout>