<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_fragment_behind_content"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/default_error"/>

    <TextView
        android:id="@+id/tv_item_fragment_behind_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_fragment_behind_content"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/iv_item_fragment_behind_content"
        android:maxLines="2"
        android:text="阿拉啦啦啦啦啦"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/iv_item_fragment_behind_content"
        android:layout_toRightOf="@+id/iv_item_fragment_behind_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/black_share_icon"/>

        <TextView
            android:id="@+id/tv_item_fragment_behind_content_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="40"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/home_like"/>

        <TextView
            android:id="@+id/tv_item_fragment_behind_content_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="20"/>
    </LinearLayout>
</RelativeLayout>