<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:background="#ab5a5a"
        android:id="@+id/iv_item_fragment_series_detail_tab"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_item_fragment_series_detail_tab_durtation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="82dp"
        android:text="17:29"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/tv_item_fragment_series_detail_tab_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_fragment_series_detail_tab"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_item_fragment_series_detail_tab"
        android:maxLines="2"
        android:text=""
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/tv_item_fragment_series_detail_tab_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_fragment_series_detail_tab"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_item_fragment_series_detail_tab"
        android:text="2016.09.12"
        android:textColor="#979595"
        android:textSize="10dp"/>

    <TextView
        android:id="@+id/tv_item_fragment_series_detail_tab_showPlaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_item_fragment_series_detail_tab_durtation"
        android:layout_alignRight="@+id/tv_item_fragment_series_detail_tab_durtation"
        android:layout_below="@+id/tv_item_fragment_series_detail_tab_info"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="18dp"
        android:text="正在播放"
        android:textColor="#fff"
        android:visibility="gone"/>
</RelativeLayout>